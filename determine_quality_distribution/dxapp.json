{
  "name": "determine_quality_distribution",
  "title": "Determine Quality Distribution",
  "summary": "Determines the mean, standard deviation, and coverage of a pair of fastq files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "reads",
      "label": "Reads",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz", "*.fq.gz"
      ],
      "help": ""
    },
    {
      "name": "read_mates",
      "label": "Read Mates",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz", "*.fq.gz"
      ],
      "help": ""
    },
    {
      "name": "captured_size_in_bp",
      "label": "Size of the captured region",
      "class": "int",
      "optional": false,
      "default": 3234830000,
      "help": "Number of basepairs of targeted region. Default set to 3,234.83 Mb, which is an estimated Human Genome size."
    },
    {
      "name": "num_reads_per_chunk",
      "label": "Number of reads per chunk",
      "class": "int",
      "optional": false,
      "default": 75000000,
      "help": "Number of reads per chunk. Default set to 75000000, which is an estimate of 5X WGS (assuming a length of 200bp per read-pair)."
    }
  ],
  "outputSpec": [
    {
      "name": "mean_pair_qualities",
      "label": "Mean Pair Qualities",
      "class": "float",
      "help": ""
    },
    {
      "name": "standard_deviation_pair_qualities",
      "label": "Standard Deviation Pair Qualities",
      "class": "float",
      "help": ""
    },
    {
      "name": "coverage",
      "label": "Coverage of Human Genome",
      "class": "float",
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 72
      }
    },
    "interpreter": "bash",
    "file": "src/determine_quality_distribution.sh",
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"main": {"instanceType": "mem1_ssd1_x32"}},
                      "assetDepends": [ { "id": "record-F8xb7V00V3qj5zQK2xGGPbB1" } ] }
                    },
  "access": {"network": ["*"]}
}
